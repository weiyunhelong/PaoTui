    <view class='agreetip'>我同意</view>
    <view class='agreetxt'>《小龙快跑跑腿员服务协议》</view>
  </view>

  <!--操作按钮-->
  <view class="c-minheight wx-view_dHiiPT">
    <text class="c-block wx-text_yebBOBs" bindtap='getorderopt' wx:if="{{orderstatus==0}}">抢单</text>
    <block wx:if="{{orderstatus==1}}">
