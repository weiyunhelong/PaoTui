      <image class="wx-image_jDkO78" mode="scaleToFill" src="{{order.member.user_name}}" />
      <text class="c-block wx-text_ZaU8MQ">{{order.member.user_name}}</text>
      <text class="c-block wx-text_AGSsoP" wx:if="{{isshop}}">商家</text>
      <text class="c-block wx-text_2W9cwy" wx:if="{{islevel}}">优质客户</text>
    </view>
    <view class="c-minheight wx-view_2wZcg2" wx:if="{{orderstatus!=0}}">
      <image class="wx-image_tFdnbt" mode="scaleToFill" src="/resources/xiaoxi.png" bindtap='gomessageopt' />
      <view class='fengexian'></view>
      <image class="wx-image_vJe3HO" mode="scaleToFill" src="/resources/phone.png" bindtap='gophoneopt' data-phone='{{order.mobile}}' />
    </view>
  </view>
  <!--订单信息-->
  <view class="c-minheight wx-view_JQPoPT1">
    <view class="c-minheight wx-view_o76ZdP">
      <text class="c-block wx-text_uhetRv">跑单编号</text>
      <text class="c-block wx-text_uhetRv">{{order.runn_no}}</text>
    </view>
    <view class="c-minheight wx-view_o76ZdP">
      <text class="c-block wx-text_uhetRv">跑单时间</text>
